<div class="bs-callout bs-callout-info">
  <div class="form-group row">
    <div class="col-sm-offset-3 col-sm-6">
      <h4>Select Input File(s)</h4>
      <p class="help-block">Use this form to select the input files for <span class="label label-primary"><%= @configuration.value %></span>.
        <% if @input_configuration[:file_type].present? %>
          The specified file type is <strong><%= @input_configuration[:file_type] %></strong>.
        <% end %>
        </p>
        <% if @input_configuration[:multiple] == 'true' %>
          <% opts = {multiple: true, class: 'form-control', name: "workflow[inputs][input_file]"} %>
        <% else %>
          <% opts = {include_blank: 'Please select a file...', class: 'form-control', name: "workflow[inputs][input_file]"} %>
        <% end %>
        <%= select_tag :workflow_inputs_input_file, options_for_select(@input_files), opts %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $('#workflow_inputs_input_file').change(function() {
       inputFile = $(this).val();
       $('#selected-inputs').html(inputFile);
    });
</script>